<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/gray33"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:text="忘记密码"/>

        <include layout="@layout/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="-25dp"
            android:paddingRight="@dimen/dimen_5dp">


            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputIDCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:title="身份证号:"
                app:eidtHnit="请输入有效的身份证号"
                android:visibility="gone"
                ></com.zodiac.polit.widget.InputLayout>


            <com.zodiac.polit.widget.InputLayout
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:isMobile="true"
                app:title="手机号:"
                app:eidtHnit="请输入手机号"
                ></com.zodiac.polit.widget.InputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvInputStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* "
                        android:textSize="@dimen/sp_14"
                        android:textColor="#ff0000"
                        />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="验证码："
                        android:textColor="@color/gray66"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_42dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_et"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:textColor="@color/gray33"
                    android:textColorHint="@color/gray99"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tvSendCode"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_42dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/orange"
                    android:text="获取验证码"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:background="@drawable/bg_et"
                    android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnCommit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:background="@drawable/bg_btn_blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>


    </LinearLayout>

</LinearLayout>